<link rel="stylesheet" href="/public/css/topBar.css" />
<header class="top-nav">
  <div class="nav-left">
    <button aria-label="Menu">
      <img src="/public/img/header/hamburger.svg" alt="hamburgerIcon" />
    </button>
    <a href="/">
      <img 
      src="/public/img/header/Youtube-Logo.svg"
      alt="YouTube Logo"
      class="logo"
    />
  </a>
  </div>

  <div class="nav-center">
    <form class="search-form" id="searchForm"> <!--검색 기능 추가-->
      <input id="search" name="search" type="text" placeholder="search" />
      <button type="submit">
        <img src="/public/img/header/search.svg" alt="searchIcon" />
      </button>
    </form>
    <button aria-label="Mic">
      <img src="/public/img/header/mic.svg" alt="micIcon" />
    </button>
  </div>

  <div class="nav-right">
    <button aria-label="Upload">
      <img src="/public/img/header/upload.svg" alt="uploadIcon" />
    </button>

    <button aria-label="Apps">
      <img src="/public/img/header/apps.svg" alt="appsIcon" />
    </button>
    <button aria-label="Notifications">
      <img src="/public/img/header/notifications.svg" alt="notificationsIcon" />
    </button>
    <img
      src="/public/img/navBar/subUserIcon1.svg"
      alt="Profile"
      class="profile-img"
    />
  </div>
</header>
<script> // 검색 기능 관련 자바스크립트 추가
  document.getElementById('searchForm').addEventListener('submit', function (e) {
    e.preventDefault(); // 기본 동작 중단
    const input = document.getElementById('search');
    const query = input.value.trim();

    if (query) {
      // 현재 경로 + 쿼리 문자열로 이동
      window.location.href = `/search?search=${encodeURIComponent(query)}`;
    }
  });
</script>